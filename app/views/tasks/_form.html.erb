<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_area :title, class: "form-control form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: "form-control form-input" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
