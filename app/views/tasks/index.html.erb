<div class="container">
  <div class="index-container">
    <div class="offset-md-4 col-md-4 form">
      <div class="title">
        <h1 class="underline">Task List</h1>
          <%= link_to tasks_new_path do %>
            <i class="fa fa-plus"></i>
          <% end %>
      </div>
      <div class="tasks">
      <% @tasks.each do |task| %>
        <% unless task.completed %>
        <div class="this">
          <div class="check-box">
            <%= link_to task_edit_path(task) do %>
              <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to task_path(task),
              method: :delete,
              data: {confirm: "Are you sure?" } do %>
              <i class="fa fa-trash"></i>
          <% end %>
          </div>
          <div class="task-list">
          <p><%= link_to task.title, task_path(task) %></p>
          </div>
        <% end %>
         </div>
      <% end %>
      </div>
    </div>
  </div>
</div>


